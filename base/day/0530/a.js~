/*
  ES5没有块级作用域，只有函数作用域
*/

console.log('***********');
for(var j = 0; j<6;j++){
    console.log(j);
    var temp = 'temps';
}
console.log(temp);//'temps'
console.log(j);

function fn(){
    var fnvalue = 'value';
}

console.log(fnvalue);//fnvalue is not defined

for(let i = 0; i<6;i++){
    console.log(i);
}
//console.log(i);//i is not defined
